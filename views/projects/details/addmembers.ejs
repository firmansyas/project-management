<% include ../../partials/header %>
<% include ../../partials/menu %>
<% include ../../partials/sidebar %>

<div class="container" style="float: right; width: 80%">
  <div class="panel-body">
    <form method="POST" action="/projects/details/<%=idURL%>/members/addmembers">

      <div class="form-group row">
        <label class="col-sm-2 col-form-label" >
          Name Projects
        </label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="name"  value="<%= data[0].name %>" placeholder="name" readonly>
          <% console.log('ini adalah data:', userData) %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">
          Choose Member</label>
          <div class="col-sm-10">
            <select class="form-control" name="member">
              <% for(let x=0; x<userData.length; x++) { %>
                <option value="<%=userData[x].userid%>"><%=userData[x].firstname + " " + userData[x].lastname %></option>
                <% } %>
              </select>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-10">
              <button type="submit" name="submit" class="btn btn-primary">Update</button>
              <a href="/projects/details/<%=idURL%>/members" class="btn btn-primary">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
    <% include ../../partials/footer %>
