<% include ../partials/header %>
<% include ../partials/menu %>
<div class="panel-body">
  <form method="POST" action="/projects/add">
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        Name
      </label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="name"  value="" placeholder="name" required>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">
        Member</label>
        <div class="col-sm-10">
          <% for(let x=0; x<userData.length; x++) { %>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="members" value="<%=userData[x].userid%>">
                <%=userData[x].firstname + " " + userData[x].lastname %>
              </label>
            </div>
            <% } %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" name="submit" class="btn btn-primary">Add</button>
            <a href="/projects" class="btn btn-primary">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <% include ../partials/footer %>
